<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miaxis.btfingerprinterlibdemo.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="init"
            android:id="@+id/btn_init"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/et_mac"
            android:text="08:7C:BE:FB:BE:7B"
            android:hint="mac address"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Connect"
            android:id="@+id/btn_connect"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:hint="print content"
            android:maxLength="24"
            android:singleLine="true"
            android:id="@+id/et_print_content"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Print"
            android:id="@+id/btn_print"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get Finger"
            android:id="@+id/btn_get_finger"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:hint="fingerPrint data base64"
            android:id="@+id/tv_finger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"/>

        <Button
            android:text="Cancel Get Finger"
            android:id="@+id/btn_cancel_get_finger"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Scroll Paper"
            android:id="@+id/btn_scroll_paper"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Lamp Control"
            android:id="@+id/btn_lamp_control"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get Device Info"
            android:id="@+id/btn_get_device_info"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get Device SN"
            android:id="@+id/btn_get_device_sn"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get Device UUID"
            android:id="@+id/btn_get_device_uuid"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get Encrypt Mode"
            android:id="@+id/btn_get_encrypt_mode"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>
</ScrollView>
