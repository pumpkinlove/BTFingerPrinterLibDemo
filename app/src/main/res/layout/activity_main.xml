<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miaxis.btfingerprinterlibdemo.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="init"
            android:id="@+id/btn_init"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/et_mac"
            android:text="08:7C:BE:FB:BE:7B"
            android:hint="mac address"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Connect"
            android:id="@+id/btn_connect"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:hint="print content"
            android:maxLength="24"
            android:singleLine="true"
            android:id="@+id/et_print_content"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Print"
            android:id="@+id/btn_print"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get Finger"
            android:id="@+id/btn_get_finger"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:hint="fingerPrint data base64"
            android:id="@+id/tv_finger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"/>

        <Button
            android:text="Cancel Get Finger"
            android:id="@+id/btn_cancel_get_finger"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Scroll Paper"
            android:id="@+id/btn_scroll_paper"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Lamp Control"
            android:id="@+id/btn_lamp_control"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get Device Info"
            android:id="@+id/btn_get_device_info"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get Device SN"
            android:id="@+id/btn_get_device_sn"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get Device UUID"
            android:id="@+id/btn_get_device_uuid"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get Finger Image"
            android:id="@+id/btn_get_finger_image"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:layout_weight="1"
                android:text="Set Device Mode L0"
                android:id="@+id/btn_set_device_mode0"
                android:layout_width="0dp"
                android:layout_height="50dp" />

            <Button
                android:layout_weight="1"
                android:text="Set Device Mode L1"
                android:id="@+id/btn_set_device_mode1"
                android:layout_width="0dp"
                android:layout_height="50dp" />


        </LinearLayout>



        <Button
            android:text="Base64 Encode"
            android:id="@+id/btn_base64_encode"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Generate RSA Keypair"
            android:id="@+id/btn_gen_RSA_key_pair"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get RSA Public Key"
            android:id="@+id/btn_get_RSA_public_key"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Generate Digest"
            android:id="@+id/btn_gen_digest"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Generate Session Key"
            android:id="@+id/btn_get_session_key"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="AES_GCM_NOPADDING_Encryption"
            android:id="@+id/btn_AES_GCM_NOPADDING_Encryption"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="AES_GCM_NOPADDING_Decryption"
            android:id="@+id/btn_AES_GCM_NOPADDING_Decryption"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Digital Signature RSA2048 With SHA256"
            android:id="@+id/btn_DigitalSignatureRSA2048withSHA256"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Asymmetric Encryption X509"
            android:id="@+id/btn_AsymmetricEncryptionX509"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Write File To Device"
            android:id="@+id/btn_write_file_to_device"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Read File From Device"
            android:id="@+id/btn_read_file_from_device"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Sign Data"
            android:id="@+id/btn_sign_data"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get Secure Processor UUID"
            android:id="@+id/btn_get_secure_processor_uuid"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Get Secure Processor Version"
            android:id="@+id/btn_get_secure_processor_version"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:text="Delete File From Device"
            android:id="@+id/btn_delete_from_device"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Set encrypt mode 0 no encrypt"
                android:id="@+id/btn_set_usb_encryption0"
                android:layout_width="0dp"
                android:layout_height="50dp" />

            <Button
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Set encrypt mode 1 encrypt"
                android:id="@+id/btn_set_usb_encryption1"
                android:layout_width="0dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_finger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
